<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.uknown.kelompok8_project_akhir_8.homepage.orderpage.payment.detailpayment.DetailRetailPaymentFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:src="@drawable/image_alfa"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/alfamart"
                            style="@style/poppins14RegularBlackGrey"
                            android:layout_marginStart="20dp"/>
                        
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_1_ask_the_cashier_for_online_payment"
                        style="@style/poppins14RegularGrey"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2_when_you_asked_what_payment_answer_bux"
                        style="@style/poppins14RegularGrey"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_3_the_cashier_will_ask_what_is_your_booking_code_here_is_your_booking_code"
                        style="@style/poppins14RegularGrey"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="30dp"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/randomCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.75"
                            android:paddingStart="40dp"
                            android:text="@string/_230719_0001"
                            style="@style/poppins16SemiBoldPrimary"
                            android:gravity="center"/>

                        <ImageView
                            android:id="@+id/barcode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:src="@drawable/icon_barcode"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_4_you_re_gonne_be_changed_as_much_as_the_total_payment_as_you_can_see_is_this_header"
                        style="@style/poppins14RegularGrey"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_5_keep_the_reciept_in_case_you_re_having_problem_with_payment_verification"
                        style="@style/poppins14RegularGrey"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/verifpayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn"
                android:text="@string/verify_payment"
                style="@style/poppins16SemiBoldWhite"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>